{
    "apps" : [{
        "name"        : "nodejs-server-for-reactjsapp",
        "script"      : "./src/server/server.js",
        "watch": ["./src/server", "./src/web"],
        "watch_options": {
            "usePolling": true,
            "followSymlinks": false
        },
        "max_memory_restart": "150M",
        "env": {
          "NODE_ENV": "development",
          "DEBUG": ""
        },
        "env_production" : {
           "NODE_ENV": "production"
        }
    }]
}
